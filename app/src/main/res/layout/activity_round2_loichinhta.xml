<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vtv.vuatiengviet.round2_loichinhta">
    <LinearLayout
        android:layout_above="@+id/layoutAd"
        android:id="@+id/lele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/nenmanchoi2_1">
        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/level"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="-70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/iconback"/>
        <LinearLayout
            android:background="@drawable/khungthoigian"
            android:layout_marginLeft="280dp"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mảnh 1"
                android:id="@+id/countdown"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#FFC107"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:orientation="horizontal"
            android:background="@drawable/khungchu" >
            <TextView
                android:id="@+id/layout_2"
                android:layout_width="300dp"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="C/h/ị/h/c/t/ủ"
                android:textColor="#E6780D"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:weightSum="2">
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="Mảnh 1"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/dap1"
                android:background="@drawable/khungchinhta"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#FFC107"/>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="Mảnh 1"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/dap2"
                android:background="@drawable/khungchinhta"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#FFC107"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/layoutAd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"/>
</RelativeLayout>