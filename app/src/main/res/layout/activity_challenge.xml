<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChallengeActivity"
    android:background="@drawable/nenmanchoi"
    android:weightSum="100">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="40">

    <ImageView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:src="@drawable/ttdoikhang"
        android:layout_marginBottom="20dp"/>
  </RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="60"
      android:orientation="vertical"
      android:weightSum="100">
    <Button
        android:id="@+id/btn_challenge_find_match"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Chơi Ngay"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="21dp"
        android:textColor="@color/black"
        android:background="@drawable/choingayclick"/>
    <Button
        android:id="@+id/btn_challenge_create_room"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Tạo phòng"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="21dp"
        android:textColor="@color/black"
        android:background="@drawable/choingayclick"/>
    <Button
        android:id="@+id/btn_challenge_find_room"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Tìm phòng"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="21dp"
        android:textColor="@color/black"
        android:background="@drawable/butbxhlick"/>
  </LinearLayout>
</LinearLayout>