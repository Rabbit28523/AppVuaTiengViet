<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/quaman">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/losee" />



    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/anhsang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/branhsang" />
        <ImageView
            android:id="@+id/hinhkc"
            android:layout_centerInParent="true"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="170dp"
            android:src="@drawable/money" />

        <TextView
            android:layout_centerInParent="true"
            android:layout_below="@id/hinhkc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Bạn được tặng +5 ruby"
            android:textColor="#CC5073"
            android:textSize="24dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/choingayclick"
        android:layout_gravity="center"
        android:text="Tiếp Tục"
        android:textAllCaps="false"
        android:textSize="21dp"
        android:id="@+id/tieptuc"
        android:textColor="@color/black"
        android:textStyle="bold"/>
</LinearLayout>